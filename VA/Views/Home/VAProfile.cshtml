                        <div class="field">
                            <label>Contact number</label>
                            <input type="text" name="phoneNumber" id="phoneNumber" value="@Model.phonenumber">
                        </div>


                        <div class="field">
                            <label>Open hour detail</label>
                            <input type="text" name="open" id="open"  value="@Model.openingDetail">
                        </div>
                        <div class="actions">
                            <button class="ui teal right floated button edit_VA_Profile_button">edit</button>
