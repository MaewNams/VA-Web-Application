@model VA.Models.Administrator
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ui middle aligned center aligned grid" style="padding-top:100px">
    <div class="column">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="ui three column centered grid">
                <div class="column">
                    <div class="ui large center aligned teal header">Login to your account</div>



                    <div class="ui large form">
                        <div class="ui stacked segment">

                            <div class="field">
                                <div class="ui left icon input">
                                    <input type="text" placeholder="Username" name="username">
                                    <i class="user icon"></i>
                                    @Html.ValidationMessageFor(model => model.username, "", new { @name = "username" })
                                </div>
                            </div>
                            <div class="field">
                                <div class="ui left icon input">
                                    <input type="password" placeholder="Password" name="password">
                                    <i class="lock icon"></i>

                                    @Html.ValidationMessageFor(model => model.password, "", new { @name = "password" })
                                </div>
                            </div>

                            @if (ViewBag.LoginError != null)
                            { <div class="ui center aligned basic segment" style="margin-top:-20px;margin-bottom:-5px">
                                <div class="ui red basic label">
                                    <strong>Sorry!</strong> @ViewBag.LoginError
                                </div>
                            </div>
                            }
                            <button class="fluid ui teal submit button">Login</button>


                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
